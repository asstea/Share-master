<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/share_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingEnd="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingStart="24dp"
        android:text="分享到"
        android:textColor="@color/color_666666"
        android:textSize="13sp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/share_lv_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/share_tv_title"
        android:paddingLeft="24dp"
        android:paddingRight="3dp"
        android:scrollbars="none" />


    <View
        android:id="@+id/share_view_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/share_lv_one"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/color_cccccc"
        android:visibility="gone" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/share_lv_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/share_view_line"
        android:paddingLeft="24dp"
        android:paddingRight="3dp"
        android:scrollbars="none" />


    <TextView
        android:id="@+id/share_tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@+id/share_lv_two"
        android:layout_marginTop="18dp"
        android:background="@color/color_ffffff"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/color_333333"
        android:textSize="18sp" />

</merge>